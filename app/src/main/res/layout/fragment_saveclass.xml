git <?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E8F0FE"> <!-- Fondo azul claro -->

    <!-- Campo de Valor de la Clase -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Valor de la Clase"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/editTextValorClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el valor de la clase"
        android:inputType="numberDecimal"
        android:padding="8dp"
        android:background="#ffffff"
    android:textColor="#000000" />

    <!-- Campo de Fecha de la Clase -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha de la Clase"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/datePickerFechaClase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la fecha"
        android:padding="8dp"
        android:background="#ffffff"
    android:textColor="#000000" />

    <!-- Campo de Materia -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Materia"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/editTextMateria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese la materia de la clase"
        android:padding="8dp"
        android:background="#ffffff"
    android:textColor="#000000" />

    <!-- BotÃ³n para guardar -->
    <Button
        android:id="@+id/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Guardar"
        android:textColor="#ffffff"
        android:background="#3F51B5"
        android:textAllCaps="false"
        android:elevation="4dp" />

</LinearLayout>
